# Sources sets
include make/srcs.mk
include make/test_srcs.mk

# Output name
NAME			=			libft.a

TEST_NAME		=			tests_bin

# Compilation
CC				=			gcc
CFLAGS			=			-Wall -Werror -Wextra

# Paths
SRCDIR			=			./src/
INCDIR			=			./includes/
OUTDIR			=			./objs/prod/

# MLX
MLX_INC			=			/usr/local/include

# Test paths
TEST_DIR		=			./tests/
TEST_SRCDIR		=			$(addprefix $(TEST_DIR), src/)
TEST_INCDIR		=			$(addprefix $(TEST_DIR), includes/)
TEST_OUTDIR		=			$(addprefix $(TEST_DIR), objs/prod)

# OBJS
OBJS			=			$(addprefix $(OUTDIR),$(SRCS:.c=.o))
TEST_OBJS		=			$(addprefix $(TEST_OUTDIR),$(TEST_SRCS:.c=.o))

prod: $(NAME)

re: fclean $(NAME)

$(NAME): $(OBJS)
	@ar rcs $(NAME) $(OBJS)

$(OUTDIR)%.o: $(SRCDIR)%.c
	@if [ ! -d $(dir $@) ]; then mkdir -p $(dir $@); fi
	@$(CC) $(CFLAGS) -I $(INCDIR) -I $(MLX_INC) -o $@ -c $<

test: $(NAME) $(TEST_OBJS)
	@$(CC) $(CFLAGS) $(TEST_OBJS) $(NAME) -o $(TEST_NAME) -lm
	@./$(TEST_NAME)

$(TEST_OUTDIR)%.o: $(TEST_SRCDIR)%.c
	@if [ ! -d $(dir $@) ]; then mkdir -p $(dir $@); fi
	@$(CC) $(CFLAGS) -I $(INCDIR) -I $(TEST_INCDIR) -o $@ -c $<

clean:
	@rm -rf $(OUTDIR) $(TEST_OUTDIR)

fclean:
	@rm -rf $(NAME) $(TEST_NAME)
